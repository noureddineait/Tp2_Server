@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = "_Layout";
    ViewBag.Title = "Information Patient";
}
@model Tp2_Server.Models.Patient
<h1 class="bg-info border d-flex aligns-items-center">Information du Patient @Model.Nom </h1>

<div class="container-fluid">
    <div class="d-flex flex-row">
        <div class=" mb-3  mt-3 col-3">
            <img src="./iconProfil.jpg" alt="Icon" class="rounded-circle img-thumbnail" width="200" height="200" />
        </div>
        <div class=" mb-3 me-5 mt-3 sm-col">
            <label class="fw-bold fs-3"><span class="text-primary">Nom Complet : </span>@Model.Nom @Model.Prenom</label>
            <label class="fw-bold fs-3"><span class="text-primary">Date de Naissance : </span>@Model.Date</label>
            <label class="fw-bold fs-3"><span class="text-primary">Genre : </span>@Model.Genre</label>
            <label class="fw-bold fs-3"><span class="text-primary">Ville : </span>@Model.Ville</label>

            <div>
                <label class="fw-bold fs-3">@ViewBag.Result </label>
            </div>
            <a class="btn btn-primary" href="~/Home/Patients">Retour</a>
        </div>
        
    </div>
    <form method="post">
            <input type="submit" value="Supprimer" name="submit" class="btn btn-danger"/>
            <input type="submit" value="Liste De Diagnostique" name="submit" class="btn btn-success"/>            
    </form>
</div>